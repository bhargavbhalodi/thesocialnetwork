<PostScreen>
    BoxLayout:
        padding: 5
        orientation: 'vertical'
        Label:
            text: 'New Post'
        TextInput:
            id: content
            text: 'Type post here: '
        Button:
            text:'Post'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.self.post
                root.manager.current = 'news_feed'
        Button:
            id: cancel
            text: 'Cancel'
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'news_feed'
<NewsFeedScreen>